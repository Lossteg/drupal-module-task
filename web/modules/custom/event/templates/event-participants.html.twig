<div class="event-participants">
  <h2>{{ 'Participants for "@event"'|t({'@event': event.title}) }}</h2>

  {% if event.participants is empty %}
    <p>{{ 'No participants registered yet.'|t }}</p>
  {% else %}
    <table>
      <thead>
      <tr>
        <th>{{ 'Name'|t }}</th>
        <th>{{ 'Email'|t }}</th>
        <th>{{ 'Registration Date'|t }}</th>
      </tr>
      </thead>
      <tbody>
      {% for participant in event.participants %}
        <tr>
          <td>{{ participant.name }}</td>
          <td>{{ participant.email }}</td>
          <td>{{ participant.registered }}</td>
        </tr>
      {% endfor %}
      </tbody>
    </table>
  {% endif %}
</div>
